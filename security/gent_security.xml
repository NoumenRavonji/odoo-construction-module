<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_gent">
            <field name="name">GENT Coordinateur des travaux</field> 
            <field name="sequence">7</field>
        </record>

        <record id="group_coordinateur_travaux" model="res.groups">
            <field name="name">Responsable</field>
            <field name="category_id" ref="module_category_gent"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>


         <record model="ir.module.category" id="module_category_gent_facturation">
            <field name="name">GENT Facturation</field> 
            <field name="sequence">8</field>
        </record>

         <record id="group_gent_facturation_responsable" model="res.groups">
            <field name="name">Responsable</field>
            <field name="category_id" ref="module_category_gent_facturation"/>
             <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
        </record>

        <record model="ir.rule" id="gent_facturation_invoice_rule">
            <field name="name">Facturation account invoice rule </field>
            <field name="model_id" ref="model_account_invoice" />
            <field name="domain_force"> [(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('gent.group_gent_facturation_responsable'))]" />
            <field eval="1" name="perm_write" ></field> 
            <field eval="1" name="perm_read" ></field> 
            <field eval="1" name="perm_unlink" ></field> 
            <field eval="1" name="perm_create" ></field> 

        </record>


        <record model="ir.rule" id="gent_facturation__invoice_line_rule">
            <field name="name">Facturation account invoice line rule </field>
            <field name="model_id" ref="model_account_invoice_line" />
            <field name="domain_force"> [(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('gent.group_gent_facturation_responsable'))]" />
            <field eval="1" name="perm_write" ></field> 
            <field eval="1" name="perm_read" ></field> 
            <field eval="1" name="perm_unlink" ></field> 
            <field eval="1" name="perm_create" ></field> 

        </record>



    </data>
</openerp>