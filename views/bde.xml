<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="bde_form" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <!--  <field name="idea_ids" string="Number of ideas"/> -->
                    <field name="avantmetre" string="Avant-métré"/>
                </xpath>
            </field>
        </record>
    	<record id="bde_list_action" model="ir.actions.act_window">
			<field name="name">BDE</field>
			<field name="res_model">sale.order</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
                <p class="oe_view_nocontent_create">Créer un BDE (Bordereau Détail Estimatif)
                </p>
            </field>
		</record>
        

    	<menuitem id="bde_menu" name="BDE" parent="gent_devis_menu"
                  action="bde_list_action"/>

    </data>
</openerp>